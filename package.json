{
  "name": "ac-companion-python",
  "displayName": "AC Companion Python",
  "description": "",
  "publisher": "ktsn-ud",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn-ud/ac-companion-python.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ac-companion-python.start",
        "title": "AC Companion Python: Start"
      },
      {
        "command": "ac-companion-python.stop",
        "title": "AC Companion Python: Stop"
      }
    ],
    "configuration": {
      "title": "AC Companion Python",
      "properties": {
        "ac-companion-python.port": {
          "type": "number",
          "default": 10043,
          "description": "Competitive Companion が post するポート番号"
        },
        "ac-companion-python.testCaseSaveDirName": {
          "type": "string",
          "default": "tests",
          "description": "テストケースを保存するディレクトリ名"
        },
        "ac-companion-python.templateFilePath": {
          "type": "string",
          "default": ".config/templates/main.py",
          "description": "コードテンプレートファイルのパス"
        },
        "ac-companion-python.interpreter": {
          "type": "string",
          "enum": [
            "cpython",
            "pypy"
          ],
          "default": "cpython",
          "description": "テスト実行で使用するインタプリタ"
        },
        "ac-companion-python.pythonCommand": {
          "type": "string",
          "default": "python",
          "description": "CPython 実行時のコマンド名またはパス"
        },
        "ac-companion-python.pypyCommand": {
          "type": "string",
          "default": "pypy3",
          "description": "PyPy 実行時のコマンド名またはパス"
        },
        "ac-companion-python.runCwdMode": {
          "type": "string",
          "enum": [
            "workspace",
            "task"
          ],
          "default": "workspace",
          "description": "テスト実行時のカレントディレクトリ"
        },
        "ac-companion-python.timeoutMs": {
          "type": [
            "number",
            "null"
          ],
          "default": null,
          "description": "個別テストケースのタイムアウト（ミリ秒）"
        },
        "ac-companion-python.compare.mode": {
          "type": "string",
          "enum": [
            "exact"
          ],
          "default": "exact",
          "description": "テスト出力の比較モード"
        },
        "ac-companion-python.compare.caseSensitive": {
          "type": "boolean",
          "default": true,
          "description": "比較時に大文字小文字を区別するか"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ac-companion-python",
          "title": "AC Companion Python",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "ac-companion-python": [
        {
          "id": "ac-companion-python.view",
          "name": "ACCP Panel",
          "icon": "media/icon.svg",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
